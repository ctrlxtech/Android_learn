<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/app_tv"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginRight="-16dp"
        android:layout_alignParentRight="true"
        android:background="#00000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/tv_btn_power"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/tv_btn_panel"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/tv_btn_avtv"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/tv_btn_more"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            />

    </LinearLayout>


    <Button
        android:id="@+id/tv_btn_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="280dp">

        <Button
            android:id="@+id/tv_btn_left"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/tv_btn_center"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            />

        <Button
            android:id="@+id/tv_btn_right"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            />
    </LinearLayout>

    <Button
        android:id="@+id/tv_btn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="#00000000"
        />

    <Button
        android:id="@+id/tv_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        />
</RelativeLayout>
